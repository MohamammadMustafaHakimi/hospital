
<h1>All of the uncured patients</h1>



<div class="card-group">
  <% @patients.each do |patient| %>
  <% if !patient.cured %>
  <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header"><%= "ID Number: #{patient.id}" %></div>
      <div class="card-body">
      <h5 class="card-title"><%= link_to "#{patient.first_name} #{patient.last_name.capitalize}", patient_path(patient), {:style=>':#FFFFFF;'}%></h5>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<%= link_to "Add Patients", new_patient_path, class:"btn btn-secondary btn-lg" %>
